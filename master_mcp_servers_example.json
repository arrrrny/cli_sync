{
  "zai-mcp-server": {
    "command": "npx",
    "args": [
      "-y",
      "@z_ai/mcp-server"
    ],
    "env": {
      "Z_AI_MODE": "ZAI",
      "Z_AI_API_KEY": "${Z_AI_API_KEY}"
    }
  },
  "trello-mcp": {
    "command": "npx",
    "args": [
      "@delorenj/mcp-server-trello"
    ],
    "env": {
      "TRELLO_TOKEN": "${TRELLO_TOKEN}",
      "TRELLO_API_KEY": "${TRELLO_API_KEY}"
    }
  },
  "qdrant-mcp-server": {
    "command": "uvx",
    "args": [
      "mcp-server-qdrant"
    ],
    "env": {
      "QDRANT_URL": "${QDRANT_URL}",
      "QDRANT_API_KEY": "${QDRANT_API_KEY}"
    }
  },
  "context7": {
    "command": "npx",
    "args": [
      "-y",
      "@upstash/context7-mcp",
      "--api-key",
      "${CONTEXT7_API_KEY}"
    ]
  }
}
